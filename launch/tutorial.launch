<launch>

  <arg name="frequency" default= "10"/>
  <arg name="rosbagFlag" default= "false"/>

  <node pkg="beginner_tutorials" name="talker" type="talker"
	args= "$(arg frequency)" output= "screen">
  </node>

  <node pkg="beginner_tutorials" name="listener" type="listener"
	launch-prefix = "gnome-terminal --command" output= "screen">
  </node>

  <node pkg = "rosbag" name= "rosbag_record_all" type= "record"
  		args = "-a -0 bagfile" output = "screen" 
  		if="$(eval rosbagFlag == true)">
  </node>

</launch>
